@prefix : <urn:samm:org.eclipse.esmf.samm:aspect-model:TestAspect:1.0.0#> .
@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.0.0#> .
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.0.0#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.0.0#> .

<urn:samm:org.eclipse.esmf.samm:aspect-model:TestAspect:1.0.0> a samm:Aspect ;
   samm:properties ( :acceleration ) ;
   samm:operations ( ) .

:acceleration a samm:Property ;
   samm:characteristic [
      a samm-c:SingleEntity ;
      samm:dataType :AccelerationVector
   ] .

:AccelerationVector a samm:Entity ;
   samm:properties ( :x :y :z ) .

:x a samm:Property ;
   samm:preferredName "x number"@en ;
   samm:description "A x number"@en ;
   samm:exampleValue "1" ;
   samm:characteristic :Coordinate.

:y a samm:Property ;
   samm:preferredName "y number"@en ;
   samm:description "A y number"@en ;
   samm:exampleValue "2" ;
   samm:characteristic :Coordinate.

:z a samm:Property ;
   samm:preferredName "z number"@en ;
   samm:description "A z number"@en ;
   samm:exampleValue "3" ;
   samm:characteristic :Coordinate.


:Coordinate a samm-c:Measurement;
   samm:preferredName "Coordinate"@en;
   samm:description "Represents a coordinate along an axis in space."@en;
   samm:dataType xsd:float;
   samm-c:unit unit:metre.
